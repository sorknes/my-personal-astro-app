{
    "compilerOptions": {
        "sourceMap": true,
        "target": "ESNext",
        "allowJs": true,
        "forceConsistentCasingInFileNames": true,
        "noEmitOnError": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "rootDir": ".",
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "jsx": "react"
    },
    "include": ["src/**/*.ts", "src/**/*.tsx"],
    "exclude": ["node_modules", "src/**/*.astro"]
}
